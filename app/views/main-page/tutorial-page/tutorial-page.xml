<sdp:DrawerPage 
    xmlns="http://www.nativescript.org/tns.xsd" loaded="pageLoaded" backgroundSpanUnderStatusBar="true" class="c-page" 
    xmlns:df="nativescript-telerik-ui-pro/dataform" 
    xmlns:sdp="nativescript-telerik-ui-pro/sidedrawer/drawerpage" 
    xmlns:Slides="nativescript-slides">
    <!-- BEGIN action bar-->
    <sdp:DrawerPage.actionBar>
        <ActionBar automationText="ActionBar" class="action-bar">
            <ActionBar.actionItems>
                <ActionItem>
                    <ActionItem.actionView>
                        <Label text="" class="icon" height="22" margin="0, 8, 0, -8" fontSize="25" width="72"/>
                    </ActionItem.actionView>
                </ActionItem>
            </ActionBar.actionItems>
            <ActionBar.titleView>
                <GridLayout>
                    <Label text="Tutorial" horizontalAlignment="center" class="action-title"/>
                </GridLayout>
            </ActionBar.titleView>
        </ActionBar>
    </sdp:DrawerPage.actionBar>
    <!-- END  action bar-->
    <!-- BEGIN Page Content-->
    <StackLayout padding="0">
        <GridLayout>
            <Slides:SlideContainer id="slides" pageIndicators="true">
                <Slides:Slide class="slide-1">
                    <Image src="res://tutorial1" />
                </Slides:Slide>
                <Slides:Slide class="slide-2">
                    <Image src="res://tutorial2" />
                </Slides:Slide>
                <Slides:Slide class="slide-3">
                    <Image src="res://tutorial3" />
                </Slides:Slide>
                <Slides:Slide class="slide-4">
                    <Image src="res://tutorial4" />
                </Slides:Slide>
                <Slides:Slide class="slide-5">
                    <Image src="res://tutorial5" />
                </Slides:Slide>
            </Slides:SlideContainer>
            <Button text="SKIP THIS STEP" height="50" width="65%" class="my-btn" marginTop="70%" tap="goScan"/>
        </GridLayout>
    </StackLayout>
</sdp:DrawerPage>