<ScrollView class="drawer-content">
  <StackLayout loaded="onLoaded" unloaded="onUnloaded">
    <!--BEGIN user photo-->
    <StackLayout class="avatar" margin="40 0 24 20" width="100" height="100">
      <StackLayout class="circle-wrapper">
        <Image id="imgUserPhoto" stretch="aspectFill" tap="{{onTakePhotoTap}}"/>
      </StackLayout>
    </StackLayout>
    <!--END user photo-->
    <StackLayout backgroundColor="#DFDFDF">
      <GridLayout class="drawer-news-link" tap="{{tapMonitor}}">
        <GridLayout class="drawer-external-icon" columns="auto,auto">
          <Label class="drawer-rect" col="0"/>
          <Label text="Exercise Monitor" class="drawer-external-label" col="1"/>
        </GridLayout>
      </GridLayout>

      <GridLayout class="drawer-news-link " tap="{{tapSleep}}">
        <GridLayout class="drawer-external-icon" columns="auto,auto">
          <Label class="drawer-rect" col="0"/>
          <Label text="Sleep Monitor" class="drawer-external-label" col="1"/>
        </GridLayout>
      </GridLayout>

      <GridLayout class="drawer-news-link" tap="{{tapData}}">
        <GridLayout class="drawer-external-icon" columns="auto,auto">
          <Label class="drawer-rect" col="0"/>
          <Label text="Data" class="drawer-external-label" col="1"/>
        </GridLayout>
      </GridLayout>

      <GridLayout class="drawer-external-link" tap="{{tapProfile}}">
        <GridLayout class="drawer-external-icon" columns="auto,auto">
          <Label class="drawer-rect" col="0"/>
          <Label text="Profile" class="drawer-external-label" col="1"/>
        </GridLayout>
      </GridLayout>

      <GridLayout class="drawer-external-link highlight" tap="{{tapSetting}}">
        <GridLayout class="drawer-external-icon" columns="auto,auto">
          <Label class="drawer-rect" col="0"/>
          <Label text="Settings" class="drawer-external-label" col="1"/>
        </GridLayout>
      </GridLayout>

      <GridLayout class="drawer-external-link" tap="{{tapLogout}}">
        <GridLayout class="drawer-external-icon" columns="auto,auto">
          <Label class="drawer-rect" col="0"/>
          <Label text="Logout" class="drawer-external-label" col="1"/>
        </GridLayout>
      </GridLayout>
    </StackLayout>
  </StackLayout>
</ScrollView>
